{
  "name": "arc-backend",
  "version": "0.0.0",
  "private": true,
  "main": "prod/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node prod/app.js",
    "dev": "nodemon",
    "test": "jest",
    "docker-build": "docker-compose -f docker/docker-compose.yml build",
    "dockerize": "npm run docker-build && npm run docker-start",
    "docker-start": "docker-compose -f docker/docker-compose.yml  up -d",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.8",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.10.2",
    "jest": "^27.2.4",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  }
}
